<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= favicon_link_tag 'favicon.ico' %>
      <%= link_to "Movienight", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-left">
          <li>
            <%= form_tag("/users", method: "get", class: "searchForm" ) do %>
                <div class="input-append">
                  <%= text_field_tag(:search) %>
                  <%= submit_tag("Search", class: "btn")%>
                </div>
            <% end %>
          </li>
        </ul>
      </nav>

      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Wall", root_path %></li>
          <% if signed_in? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= @current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", @user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %>
                  <li><%= link_to "Test", test_path %></li>          s
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "destroy" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>


  </div>
  <br />
</header>