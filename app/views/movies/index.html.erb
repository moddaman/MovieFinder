<h1>Listing movies</h1>

<table>
  <thead>
    <tr>
      <th>Imdb</th>
      <th>Title</th>
      <th>Tagline</th>
      <th>Plot</th>
      <th>Runtime</th>
      <th>Rating</th>
      <th>Votes</th>
      <th>Poster url</th>
      <th>Release date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.imdb_id %></td>
        <td><%= movie.title %></td>
        <td><%= movie.tagline %></td>
        <td><%= movie.plot %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.votes %></td>
        <td><%= movie.poster_url %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

